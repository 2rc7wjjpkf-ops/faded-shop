<style>
  .fy-header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 300;
    display: flex;
    justify-content: center;
    align-items: center;
    background: rgba(0, 0, 0, 0.15) !important;
    backdrop-filter: blur(10px);
    transition: background 0.4s ease, backdrop-filter 0.4s ease;
  }

  .fy-header.scrolled {
    background: rgba(0, 0, 0, 0.9) !important;
    backdrop-filter: blur(16px);
  }

  .fy-header__inner {
    width: 100%;
    max-width: 1500px;
    padding: 1.8rem 3rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  /* NAVIGATION */
  .fy-nav {
    display: flex;
    gap: 2.4rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .fy-nav a {
    color: #fff !important;
    text-decoration: none;
    font-size: 0.9rem;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    transition: opacity 0.25s ease;
  }

  .fy-nav a:hover { opacity: 0.7; }

  /* LOGO */
  .fy-header__logo {
    display: flex;
    align-items: center;
    justify-content: center;
    flex: 1;
  }

  .fy-header__logo img {
    width: clamp(130px, 20vw, 240px);
    height: auto;
    object-fit: contain;
  }

  /* ICONS */
  .fy-icons {
    display: flex;
    align-items: center;
    gap: 1.4rem;
  }

  .fy-icons svg {
    width: 22px;
    height: 22px;
    fill: #ffffff !important;
    transition: opacity 0.25s ease;
  }

  .fy-icons svg:hover { opacity: 0.7; }

  /* MOBILE */
  @media (max-width: 768px) {
    .fy-header__inner {
      padding: 1.2rem 1.6rem;
    }
    .fy-nav { display: none; }
    .fy-header__logo img { width: 160px; }
  }
</style>

<header class="fy-header" id="fy-header">
  <div class="fy-header__inner">
    <ul class="fy-nav">
      {% for link in linklists.main-menu.links %}
        <li><a href="{{ link.url }}">{{ link.title }}</a></li>
      {% endfor %}
    </ul>

    <a href="{{ routes.root_url }}" class="fy-header__logo">
      {% if settings.logo %}
        {{
          settings.logo
          | image_url: width: 600
          | image_tag:
            width: 200,
            alt: shop.name
        }}
      {% else %}
        <span style="color:white;">{{ shop.name }}</span>
      {% endif %}
    </a>

    <div class="fy-icons">
      <a href="{{ routes.search_url }}">
        <span class="svg-wrapper">{{ 'icon-search.svg' | inline_asset_content }}</span>
      </a>
      {% if shop.customer_accounts_enabled %}
        <a href="{{ routes.account_url }}">
          <span class="svg-wrapper">{{ 'icon-account.svg' | inline_asset_content }}</span>
        </a>
      {% endif %}
      <a href="{{ routes.cart_url }}">
        <span class="svg-wrapper">{{ 'icon-cart.svg' | inline_asset_content }}</span>
      </a>
    </div>
  </div>
</header>

<script>
  document.addEventListener("scroll", () => {
    const header = document.getElementById("fy-header");
    if (window.scrollY > 60) header.classList.add("scrolled");
    else header.classList.remove("scrolled");
  });
</script>

{% schema %}
{
  "name": "FADED YOUTH Header",
  "settings": [
    { "type": "image_picker", "id": "logo", "label": "Logo" }
  ]
}
{% endschema %}
