<style>
  /* === INLINE CSS FÜR BREITEN FIX === */
  /* Diese Regeln neutralisieren störende Standard-Breiten und Paddings */
  .fy-hero-wrapper {
    margin: 0 !important;
    padding: 0 !important;
    /* Nutzt die Breite des Elternelements, das die Inhaltsbreite halten sollte */
    width: 100% !important; 
    position: relative !important;
    z-index: 1 !important; /* Unter dem Header, um Klicks zu ermöglichen */
  }

  .fy-hero-video {
    display: block !important;
    width: 100% !important;
    height: 100% !important;
    object-fit: cover !important;
    object-position: 50% 50% !important;
    background: #000 !important;
  }
  
  /* --- Mobile Zoom (65% Rauszoomen) --- */
  @media screen and (max-width: 768px) {
    .fy-hero-video {
      /* Skaliert das Video für den gewünschten "Rauszoomen"-Effekt */
      transform: scale(0.65) !important; 
      transform-origin: center center !important;
      height: 85vh !important; /* Anpassung der Höhe für bessere Sichtbarkeit */
    }
  }

  /* --- Klick-Fix und Bündigkeits-Fix für Container --- */
  /* Neutralisiert alle übergeordneten Container, die die Breite begrenzen */
  .shopify-section-main-content,
  #main-content,
  .main-content,
  .content-for-index,
  .template-index {
    padding-left: 0 !important;
    padding-right: 0 !important;
    max-width: 100% !important;
  }
</style>

{% if template.name == 'index' %}
  <div class="fy-hero-wrapper">
    <video 
      class="fy-hero-video"
      autoplay
      muted
      loop
      playsinline
      preload="auto">
      
      <!-- Full HD -->
      <source src="https://cdn.shopify.com/videos/c/o/v/93b7c4458e9c49729d499191514b2502.mp4" type="video/mp4" media="(max-width:1280px)">
      
      <!-- 4K -->
      <source src="https://cdn.shopify.com/videos/c/o/v/646852d06d884d6e988af8f7629106db.mp4" type="video/mp4" media="(min-width:1281px)">
    </video>
  </div>
{% endif %}

<script>
document.addEventListener('DOMContentLoaded',()=>{
  const v=document.querySelector('.fy-hero-video');
  if(v){v.play().catch(()=>{v.muted=true;v.play();});}
});
</script>

{% schema %}
{
  "name": "FADED YOUTH Hero Video",
  "tag": "section",
  "class": "section fy-hero-section",
  "settings": [],
  "presets": [{ "name": "FADED YOUTH Hero Video" }]
}
{% endschema %}