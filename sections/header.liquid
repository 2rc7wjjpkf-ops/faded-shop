{% comment %}
  FADED YOUTH — FINAL WHITE HEADER
  - Menü links, Logo mittig, Icons rechts
  - Weißer, sticky Header
  - Schwarze Icons (Theme überschreibt nichts)
{% endcomment %}

<header class="fy-header" role="banner">
  <div class="fy-header__inner">
    <!-- Menü links -->
    <nav class="fy-header__menu">
      <ul>
        {% for link in linklists.main-menu.links %}
          <li><a href="{{ link.url }}">{{ link.title }}</a></li>
        {% endfor %}
      </ul>
    </nav>

    <!-- Logo mittig -->
    <div class="fy-header__logo">
      <a href="{{ routes.root_url }}">
        {% if settings.logo %}
          {{ settings.logo | image_url: width: 600 | image_tag: width: 220, alt: shop.name }}
        {% else %}
          <span>{{ shop.name }}</span>
        {% endif %}
      </a>
    </div>

    <!-- Icons rechts -->
    <div class="fy-header__icons">
      <a href="{{ routes.search_url }}">{{ 'icon-search.svg' | inline_asset_content }}</a>
      {% if shop.customer_accounts_enabled %}
        <a href="{{ routes.account_url }}">{{ 'icon-account.svg' | inline_asset_content }}</a>
      {% endif %}
      <a href="{{ routes.cart_url }}">{{ 'icon-cart.svg' | inline_asset_content }}</a>
    </div>
  </div>
</header>

<style>
  .fy-header{position:sticky;top:0;left:0;width:100%;background:#fff;border-bottom:1px solid #e5e5e5;z-index:1000}
  .fy-header__inner{max-width:1500px;margin:0 auto;padding:1.2rem 2rem;display:flex;align-items:center;justify-content:space-between}
  .fy-header__menu ul{display:flex;gap:2.4rem;list-style:none;margin:0;padding:0}
  .fy-header__menu a{text-decoration:none;color:#000;font-size:1.1rem;letter-spacing:.06em;text-transform:uppercase}
  .fy-header__logo{flex:1;display:flex;justify-content:center;align-items:center}
  .fy-header__logo img{max-height:58px;width:auto;display:block}
  .fy-header__icons{display:flex;align-items:center;gap:1.4rem}
  .fy-header__icons svg,.fy-header__icons svg path{width:24px;height:24px;fill:#000 !important;stroke:#000 !important;color:#000 !important}
  @media (max-width:768px){
    .fy-header__inner{padding:1rem 1.2rem}
    .fy-header__menu{display:none}
    .fy-header__logo img{max-height:54px}
  }
</style>

{% schema %}
{
  "name": "FADED YOUTH Header",
  "settings": [
    { "type": "image_picker", "id": "logo", "label": "Logo" }
  ]
}
{% endschema %}

