{% comment %}
  FADED YOUTH — HERO LOOP SECTION (Home only via CSS/UI)
{% endcomment %}
<section class="fy-hero-wrap" id="fy-hero">
  {% if section.settings.video != blank %}
    {{ section.settings.video
      | video_tag:
        autoplay: true,
        loop: true,
        muted: true,
        playsinline: true,
        controls: false,
        preload: "auto",
        class: "fy-hero-video",
        poster: section.settings.poster | image_url: width: 2000
    }}
  {% else %}
    {% if section.settings.poster != blank %}
      <img class="fy-hero-video" src="{{ section.settings.poster | image_url: width: 2000 }}" alt="Hero poster" />
    {% else %}
      <div style="color:#fff;display:flex;align-items:center;justify-content:center;height:60vh;background:#000">
        <p>Bitte Video in den Section-Einstellungen auswählen.</p>
      </div>
    {% endif %}
  {% endif %}
</section>

{% schema %}
{
  "name": "FADED YOUTH — Hero Loop",
  "settings": [
    { "type": "video", "id": "video", "label": "Hero-Video (Shopify Video)" },
    { "type": "image_picker", "id": "poster", "label": "Poster/Fallback (optional)" }
  ],
  "presets": [
    { "name": "FADED YOUTH — Hero Loop" }
  ]
}
{% endschema %}