{% comment %}
  FADED YOUTH - Optimized Header
  Clean, centered, responsive, lightweight.
{% endcomment %}

<style>
  /* === FADED YOUTH HEADER CORE === */
  .section-header, .header-wrapper, .header {
    width: 100vw !important;
    max-width: 100vw !important;
    left: 50% !important;
    transform: translateX(-50%) !important;
    margin: 0 auto !important;
    position: relative;
    z-index: 100;
    background: transparent;
  }

  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.2rem 2.4rem;
    transition: background 0.3s ease;
  }

  .header__heading {
    margin: 0 auto;
    text-align: center;
  }

  .header__heading-logo-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .header__heading-logo {
    height: auto;
    width: clamp(100px, 18vw, 220px);
  }

  .header__icons {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .header__icon svg {
    width: 22px;
    height: 22px;
  }

  /* Sticky behavior */
  sticky-header {
    position: sticky;
    top: 0;
    z-index: 100;
    background: rgba(0, 0, 0, 0.4);
    backdrop-filter: blur(12px);
  }

  /* === Mobile === */
  @media (max-width: 768px) {
    .header {
      justify-content: center;
      text-align: center;
      padding: 1rem;
    }

    .header__icons {
      position: absolute;
      right: 1rem;
      top: 50%;
      transform: translateY(-50%);
    }
  }
</style>

<sticky-header>
  <header class="header">
    <!-- Logo -->
    <a href="{{ routes.root_url }}" class="header__heading-link">
      {% if settings.logo %}
        {{
          settings.logo
          | image_url: width: 600
          | image_tag:
            class: 'header__heading-logo',
            width: 200,
            alt: shop.name
        }}
      {% else %}
        <span class="h2">{{ shop.name }}</span>
      {% endif %}
    </a>

    <!-- Icons -->
    <div class="header__icons">
      <a href="{{ routes.search_url }}" class="header__icon">
        <span class="svg-wrapper">{{ 'icon-search.svg' | inline_asset_content }}</span>
      </a>
      {% if shop.customer_accounts_enabled %}
        <a href="{{ routes.account_url }}" class="header__icon">
          <span class="svg-wrapper">{{ 'icon-account.svg' | inline_asset_content }}</span>
        </a>
      {% endif %}
      <a href="{{ routes.cart_url }}" class="header__icon" id="cart-icon-bubble">
        <span class="svg-wrapper">{{ 'icon-cart.svg' | inline_asset_content }}</span>
        {% if cart != empty %}
          <div class="cart-count-bubble">
            <span aria-hidden="true">{{ cart.item_count }}</span>
          </div>
        {% endif %}
      </a>
    </div>
  </header>
</sticky-header>

{% schema %}
{
  "name": "FADED YOUTH Header",
  "class": "section-header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    }
  ]
}
{% endschema %}
