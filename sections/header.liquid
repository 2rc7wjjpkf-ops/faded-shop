{% comment %}
  FADED YOUTH LUX HEADER
  Transparent sticky header with fade-in on scroll.
  Always visible, centered logo, minimal + performant.
{% endcomment %}

<style>
  /* === CORE HEADER STYLES === */
  .section-header, .header-wrapper, .header {
    position: fixed;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 100vw;
    max-width: 100vw;
    z-index: 200;
    transition: background 0.4s ease, backdrop-filter 0.4s ease;
    background: rgba(0, 0, 0, 0.05);
    backdrop-filter: blur(8px);
  }

  .header.scrolled {
    background: rgba(0, 0, 0, 0.85);
    backdrop-filter: blur(18px);
  }

  .header__inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.4rem 3rem;
    width: 100%;
  }

  /* === LOGO === */
  .header__heading-link {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 0 auto;
  }

  .header__heading-logo {
    width: clamp(110px, 18vw, 220px);
    height: auto;
    object-fit: contain;
  }

  /* === ICONS === */
  .header__icons {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .header__icon svg {
    width: 22px;
    height: 22px;
    fill: #fff;
  }

  .header__icon {
    color: #fff;
    transition: opacity 0.2s ease;
  }

  .header__icon:hover {
    opacity: 0.7;
  }

  /* === MOBILE === */
  @media (max-width: 768px) {
    .header__inner {
      padding: 1rem 1.5rem;
      justify-content: center;
    }

    .header__icons {
      position: absolute;
      right: 1rem;
      top: 50%;
      transform: translateY(-50%);
    }

    .header__heading-logo {
      width: 160px;
    }
  }
</style>

<header class="header" id="fy-header">
  <div class="header__inner">
    <a href="{{ routes.root_url }}" class="header__heading-link">
      {% if settings.logo %}
        {{
          settings.logo
          | image_url: width: 600
          | image_tag:
            class: 'header__heading-logo',
            width: 200,
            alt: shop.name
        }}
      {% else %}
        <span class="h2" style="color: white;">{{ shop.name }}</span>
      {% endif %}
    </a>

    <div class="header__icons">
      <a href="{{ routes.search_url }}" class="header__icon">
        <span class="svg-wrapper">{{ 'icon-search.svg' | inline_asset_content }}</span>
      </a>
      {% if shop.customer_accounts_enabled %}
        <a href="{{ routes.account_url }}" class="header__icon">
          <span class="svg-wrapper">{{ 'icon-account.svg' | inline_asset_content }}</span>
        </a>
      {% endif %}
      <a href="{{ routes.cart_url }}" class="header__icon" id="cart-icon-bubble">
        <span class="svg-wrapper">{{ 'icon-cart.svg' | inline_asset_content }}</span>
        {% if cart != empty %}
          <div class="cart-count-bubble">
            <span aria-hidden="true">{{ cart.item_count }}</span>
          </div>
        {% endif %}
      </a>
    </div>
  </div>
</header>

<script>
  /* === Smooth fade-in effect === */
  document.addEventListener('scroll', () => {
    const header = document.getElementById('fy-header');
    if (window.scrollY > 60) {
      header.classList.add('scrolled');
    } else {
      header.classList.remove('scrolled');
    }
  });
</script>

{% schema %}
{
  "name": "FADED YOUTH Lux Header",
  "class": "section-header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    }
  ]
}
{% endschema %}
